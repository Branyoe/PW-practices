<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Person</title>
  <link rel="stylesheet" href="/assets/style.css">
</head>

<body>
  <h1>Person Name: <%= ID %>
  </h1>
  </h1>
  <% 
  //objeto clave valor para simplificar el codigo
  const msgValues = { 
    'bienvenido': 'Bienvenido',
    'hola': 'Hola',
    'adios': 'Adiós'
  }
  
  //switch sustituido por notación del corchete
  // valída que el mesaje sea valido
  if(msgValues[MESSAGE]){%> 
    <h2>Mensaje: <%= msgValues[MESSAGE] %></h2>
    <%
    //valída que el paramtro TIMES sea entero
    if(Number(TIMES) % 1 == 0){ 
      for(var i = 0; i < Number(TIMES); i++) {%>
        <h4><%= `${msgValues[MESSAGE]} ${ID}` %> </h4>
      <% }   
    }else{%>
      <h4>El query times debe ser un numero entero</h4>
    <%}
  } else {%>
    <h2>Mensaje invalido</h2>
  <% } %>

  
</body>

</html>